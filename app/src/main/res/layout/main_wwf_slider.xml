<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wwf_outer_slider_container"
    android:layout_margin="@dimen/view_margin_min"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageSwitcher
        android:id="@+id/image_switcher_wwf_outer_slider"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/view_margin_2x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_wwf_outer_title"
        android:background="@color/colorTransparentBlack"
        android:paddingStart="@dimen/view_margin_x_min"
        android:paddingEnd="@dimen/view_margin_x_min"
        android:text="@string/sample_text"
        android:textColor="@color/colorWhite"
        android:textStyle="italic|bold"
        android:textSize="@dimen/text_size_medium"
        android:layout_margin="@dimen/view_margin_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_wwf_outer_pubdate"
        android:background="@color/colorTransparentBlack"
        android:textColor="@color/colorWhite"
        android:paddingStart="@dimen/view_margin_x_min"
        android:paddingEnd="@dimen/view_margin_x_min"
        android:textSize="@dimen/text_size_small"
        android:layout_below="@id/tv_wwf_outer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_min"
        />

    <TextView
        android:id="@+id/tv_wwf_outer_description"
        android:background="@color/colorTransparentBlack"
        android:paddingStart="@dimen/view_margin_x_min"
        android:paddingEnd="@dimen/view_margin_x_min"
        android:layout_below="@id/tv_wwf_outer_pubdate"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_small"
        android:text="@string/sample_text_medium"
        android:layout_margin="@dimen/view_margin_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <!--set animation -->

    </RelativeLayout>




</FrameLayout>